<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springBootDemo.mapper.UserMapper">

    <!-- type为实体类Student，包名已经配置，可以直接写类名 -->
    <resultMap id="userMap" type="UserDao">
        <id property="id" column="id" />
        <result property="userName" column="userName" />
        <result property="nickName" column="nickName" />
        <result property="age" column="age" />
        <result property="sex" column="sex" />
    </resultMap>

    <select id="getById" resultMap="userMap" resultType="UserDao">
        SELECT *
        FROM user_tb
        WHERE id = #{id}
    </select>
    
    <select id="queryAll"  resultType="java.util.list">
        SELECT *
        FROM user_tb
    </select>

    <select id="likeName" resultMap="stuMap" parameterType="string" resultType="list">
        SELECT *
        FROM STUDENT
        WHERE NAME LIKE CONCAT('%',#{name},'%')
    </select>

    <select id="getNameById" resultType="string">
        SELECT NAME
        FROM user_tb
        WHERE id = #{id}
    </select>



</mapper> 